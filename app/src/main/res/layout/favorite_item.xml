<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="125dp"
    android:layout_height="230dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/favorite_style_layout"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/favorite_style_image"
            android:layout_width="125dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/my_page" />

        <TextView
            android:id="@+id/favorite_style_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/favorite_style_image"
            android:layout_marginTop="5dp"
            android:text="히피펌"
            android:textSize="15sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <TextView
        android:id="@+id/favorite_item_tv_detail"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:background="#00FF0000"
        android:text="@string/home_item_rec_btn"
        android:textColor="@color/btnDetail_gray"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="65dp"
        />

</LinearLayout>