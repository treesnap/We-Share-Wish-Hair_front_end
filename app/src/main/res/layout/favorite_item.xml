<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">

        <ImageView
            android:id="@+id/favorite_style_image"
            android:layout_width="125dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/my_page" />

        <TextView
            android:id="@+id/favorite_style_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/favorite_style_image"
            android:layout_marginTop="12dp"
            android:text="히피펌"
            android:textSize="15sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/home_item_rec_btn_view2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/favorite_style_image"
            android:layout_marginEnd="282dp"
            android:background="#00FF0000"
            android:text="@string/home_item_rec_btn"
            android:layout_toEndOf="@id/favorite_style_name"
            android:textColor="@color/btnDetail_gray"
            android:textSize="10sp"
            android:layout_marginStart="30dp"/>

    </RelativeLayout>

</LinearLayout>