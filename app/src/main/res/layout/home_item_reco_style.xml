<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<!--    hair Image -->
    <ImageView
        android:id="@+id/home_item_rec_hairImage"
        android:layout_width="130dp"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:src="@drawable/sample_woman"
        android:scaleType="fitCenter" />

<!--    Style, heart -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="8dp">
        <TextView
            android:id="@+id/home_item_rec_hairStyle"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            tools:text="물결펌펌"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/home_item_rec_btn_view"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="@string/home_item_rec_btn"
            android:textSize="13sp"
            android:textColor="@color/btnDetail_gray"
            android:background="#00FF0000"/>

    </RelativeLayout>

</LinearLayout>
