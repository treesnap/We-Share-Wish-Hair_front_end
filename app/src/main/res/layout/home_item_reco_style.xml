<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<!--    hair Image -->
    <ImageView
        android:id="@+id/home_item_rec_hairImage"
        android:layout_width="130dp"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:src="@drawable/sample_woman"
        android:scaleType="fitCenter" />

<!--    Style, heart -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="8dp">
        <TextView
            android:id="@+id/home_item_rec_hairStyle"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            tools:text="물결펌"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <ImageView
            android:id="@+id/home_item_rec_likeImageView"
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:layout_toStartOf="@id/home_item_rec_heartCount"
            android:src="@drawable/heart_empty" />
        <TextView
            android:id="@+id/home_item_rec_heartCount"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            tools:text="504"
            android:textSize="17sp"
            android:textColor="@color/black"/>

    </RelativeLayout>

</LinearLayout>
