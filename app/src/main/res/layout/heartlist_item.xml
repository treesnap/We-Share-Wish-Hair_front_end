<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="145dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/heartlist_my_imageView_picture"
            android:layout_width="125dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/my_page" />

        <TextView
            android:id="@+id/heartlist_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/heartlist_my_imageView_picture"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            />

        <ImageView
            android:id="@+id/heartlist_my_imageView_gradeMark"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_below="@id/heartlist_username"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/heartlist_my_tv_heartCount"
            android:layout_marginEnd="5dp"
            android:background="@drawable/star_fill"
            />

        <TextView
            android:id="@+id/heartlist_my_tv_grade"
            android:layout_width="30dp"
            android:layout_height="15dp"
            android:layout_below="@id/heartlist_username"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/heartlist_my_imageView_gradeMark"
            android:includeFontPadding="false"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            />

        <ImageView
            android:id="@+id/heartlist_my_imageView_Heart"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_below="@id/heartlist_username"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/heart_fill" />

        <TextView
            android:id="@+id/heartlist_my_tv_heartCount"
            android:layout_width="53dp"
            android:layout_height="15dp"
            android:layout_below="@id/heartlist_username"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/heartlist_my_imageView_Heart"
            android:includeFontPadding="false"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            />
    </RelativeLayout>
</LinearLayout>