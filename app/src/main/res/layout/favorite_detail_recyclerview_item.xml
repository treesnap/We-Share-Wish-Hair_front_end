<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="250dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="125dp"
        android:layout_height="210dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp">

        <ImageView
            android:id="@+id/detail_recyclerview_imageview"
            android:layout_width="125dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/my_page" />

        <TextView
            android:id="@+id/detail_recyclerview_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_recyclerview_imageview"
            android:layout_marginTop="5dp"
            android:text="example"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/detail_recyclerview_heartmark"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/detail_recyclerview_nickname"
            android:layout_marginEnd="5dp"
            android:src="@drawable/heart_fill_5"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/detail_recyclerview_heartcount"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/detail_recyclerview_nickname"
            android:layout_toEndOf="@id/detail_recyclerview_heartmark"
            android:layout_marginTop="5dp"
            android:includeFontPadding="false"
            android:text="test"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"
            />

        <ImageView
            android:id="@+id/detail_recyclerview_grademark"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/detail_recyclerview_nickname"
            android:layout_toEndOf="@id/detail_recyclerview_heartcount"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/star_fill"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/detail_recyclerview_grade"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/detail_recyclerview_nickname"
            android:layout_toEndOf="@id/detail_recyclerview_grademark"
            android:layout_marginTop="5dp"
            android:includeFontPadding="false"
            android:text="test"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"
            />
    </RelativeLayout>

</LinearLayout>